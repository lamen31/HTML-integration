                    <button type="button" class="btn2 btn-outline-danger2">Periode bulan lalu</button>
                    <button type="button" class="btn2 btn-outline-danger2" style="margin-left: 0.5rem;">10 transaksi terakhir</button>
                </div>
            </div>
        </div>
    </div>

        @code {
            [Parameter]
            public EventCallback<string> OnClick { get; set; }
        }
