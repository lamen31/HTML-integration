@using Microsoft.AspNetCore.Components

    
    <div class="col-md-8" style="margin-top: 6.5%;">
        <h2 class="teks-hello2">Hello, <b class="nama-pelanggan">bambang pamungkas</b></h2>
        <p id="teks" class="teks-desc4">Pilih periode cetak transaksi</p>
        <div class="form-input-data">
            <div id="btn-periode" class="col-md-12" style="text-align: center;">
                <div class="form-group">
                    <button type="button" class="btn2 btn-outline-danger2" @onclick="@(()=>OnClick.InvokeAsync("bulanberjalan"))">Periode bulan berjalan</button>
